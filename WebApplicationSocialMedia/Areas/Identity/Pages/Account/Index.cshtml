@page
@model WebApplicationSocialMedia.Areas.Identity.Pages.Account.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].recipient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].sent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Message) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sender.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recipient.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sent)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.messageID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.messageID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.messageID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
